<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_cart">

    <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.shoppingapp.ui.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/nav_orders"
        android:name="com.example.shoppingapp.ui.orders.OrdersFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/nav_categories"
        android:name="com.example.shoppingapp.ui.categories.CategoriesFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.shoppingapp.ui.settings.SettingsFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_settings" />
</navigation>