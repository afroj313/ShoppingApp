<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchProductActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:id="@+id/r5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        >

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="Search tshits,watches,bags,laptops,smartphone here...."

            android:layout_margin="5dp"
            android:textColorHint="@color/colorbackgroundtint"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="6dp"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="5dp"
            android:id="@+id/search_product_name"
            android:layout_marginLeft="5dp" />
        <Button
            android:layout_width="wrap_content"
            android:padding="3dp"
            android:layout_height="37dp"
            android:text="Search"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/search_btn"
            android:backgroundTint="@color/colorbackgroundtint"
            android:layout_toRightOf="@+id/search_product_name"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r5"
        android:id="@+id/search_list"
        />


</RelativeLayout>